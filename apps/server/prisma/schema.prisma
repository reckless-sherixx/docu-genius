generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum InvitationStatus {
  PENDING
  ACCEPTED
  DECLINED
  EXPIRED
}

enum MemberRole {
  ADMIN
  CREATOR
}

enum TemplateStatus {
  UPLOADING
  PROCESSING
  READY
  COMPLETED
  FAILED
}

enum TemplateType {
  TEXT_PDF
  SCANNED_PDF
  IMAGE
}

enum FieldType {
  TEXT
  DATE
  NUMBER
  EMAIL
  PHONE
  ADDRESS
  SIGNATURE
  CUSTOM
}

model User {
  id                      String               @id @default(uuid())
  name                    String               @db.VarChar(191)
  email                   String               @unique
  password                String
  document_generation_pin Int?
  password_reset_token    String?
  token_send_at           DateTime?
  email_verified_at       DateTime?
  email_verify_token      String?
  created_at              DateTime             @default(now())
  ownedOrganizations      Organization[]       @relation("OrganizationOwner")
  organizationMemberships OrganizationMember[]
  sentInvites             OrganizationInvite[] @relation("InviteSender")
  generatedDocuments      GeneratedDocument[]
}

model Organization {
  id                   String               @id @default(uuid())
  name                 String               @db.VarChar(191)
  description          String?
  organization_pin     Int
  organization_head_id String
  organization_head    User                 @relation("OrganizationOwner", fields: [organization_head_id], references: [id], onDelete: Cascade)
  created_at           DateTime             @default(now())
  updated_at           DateTime             @updatedAt
  members              OrganizationMember[]
  invites              OrganizationInvite[]
  generatedDocuments   GeneratedDocument[]
}

model OrganizationMember {
  id              String       @id @default(uuid())
  organization_id String
  user_id         String
  role            MemberRole   @default(CREATOR)
  joined_at       DateTime     @default(now())
  organization    Organization @relation(fields: [organization_id], references: [id], onDelete: Cascade)
  user            User         @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@unique([organization_id, user_id])
  @@index([user_id])
  @@index([organization_id])
}

model OrganizationInvite {
  id               String           @id @default(uuid())
  organization_id  String
  email            String
  invited_by       String
  role             MemberRole       @default(CREATOR)
  invitation_token String           @unique
  status           InvitationStatus @default(PENDING)
  expires_at       DateTime
  created_at       DateTime         @default(now())
  organization     Organization     @relation(fields: [organization_id], references: [id], onDelete: Cascade)
  inviter          User             @relation("InviteSender", fields: [invited_by], references: [id], onDelete: Cascade)

  @@index([invitation_token])
  @@index([email])
  @@index([organization_id])
}

model Template {
  id                   String         @id @default(uuid())
  template_name        String         @db.VarChar(191)
  template_description String?
  category             String?        @default("General")
  s3_key               String?
  s3_url               String?
  file_size            BigInt?
  mime_type            String?
  status               TemplateStatus @default(UPLOADING)
  template_type        TemplateType?
  uploaded_by          String?
  organization_id      String?

  // Processing fields
  extracted_text          String?   @db.Text
  total_pages             Int?
  processing_started_at   DateTime?
  processing_completed_at DateTime?
  processing_error        String?   @db.Text

  // Approval workflow
  is_approved Boolean   @default(false)
  approved_by String?
  approved_at DateTime?

  // Temporary file management
  is_temporary       Boolean   @default(false)
  expires_at         DateTime?
  parent_template_id String?

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  // Relations
  fields             TemplateField[]
  generatedDocuments GeneratedDocument[]

  @@index([organization_id])
  @@index([uploaded_by])
  @@index([status])
  @@index([is_temporary, expires_at])
}

model TemplateField {
  id            String    @id @default(uuid())
  template_id   String
  field_name    String    @db.VarChar(191)
  field_type    FieldType @default(TEXT)
  placeholder   String    @db.VarChar(191)
  position_data Json?
  created_at    DateTime  @default(now())
  updated_at    DateTime  @updatedAt

  // Relations
  template Template @relation(fields: [template_id], references: [id], onDelete: Cascade)

  @@index([template_id])
}

model GeneratedDocument {
  id                     String @id @default(uuid())
  document_number        String @unique
  generated_document_url String
  template_id            String
  generated_by           String

  created_at      DateTime @default(now())
  organization_id String?

  template     Template      @relation(fields: [template_id], references: [id], onDelete: Cascade)
  user         User          @relation(fields: [generated_by], references: [id], onDelete: Cascade)
  organization Organization? @relation(fields: [organization_id], references: [id], onDelete: Cascade)

  @@index([template_id])
  @@index([organization_id])
}
